<%= semantic_form_for ([:docs, @patient]) do |f| %>
  <div class="general-form">
    <%= f.inputs do %>
      <%= f.input :first_name, label: false, placeholder: 'Nombre' %>
      <%= f.input :last_name, label: false, placeholder: 'Apellido' %>
      <%= f.input :email, label: false, placeholder: 'Email' %>
      <%= f.input :address, label: false, placeholder: 'Direccion' %>
      <%= f.input :phone, label: false, placeholder: 'Telefono' %>
      <%= f.input :national_id, label: false, placeholder: "Cédula" %>
      <%= f.input :pob, label: false, placeholder: "Lugar de Nacimiento" %>
      <%= f.input :dob, label: "Fecha de Nacimiento", start_year: 1900, placeholder: "Fecha de Nacimiento" %>
      <%= f.input :cellphone, label: false, placeholder: "Celular" %>
      <%= f.input :office_phone, label: false, placeholder: "Teléfono de Oficina" %>
      <%= f.input :gender, label: "Sexo", placeholder: "Sexo" %>
    <% end %>
  </div>
  <%= f.actions do %>
    <%= f.action :submit, :label => " Guardar ", :button_html => { :class => "submit-button" } %>
  <% end %>
<% end %>
