<%= semantic_form_for @appointment do |f| %>
  <%= f.inputs do %>
    <%= f.input :doctor %>
    <%= f.input :patient %>
    <%= f.input :description %>
    <%= f.input :start %>
    <%= f.input :end %>
    <%= f.input :price %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
