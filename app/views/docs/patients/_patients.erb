<table class="table">
  <thead class="thead-products">
    <tr>
      <th><%= sortable "Nombre", ["users.first_name"] %></th>
      <th><%= sortable "Teléfono", ["phone"] %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %>&nbsp;<%= patient.last_name %></td>
        <td><%= patient.phone %></td>
        <td><%= link_to 'Historia Clínica', docs_patient_path(patient) %></td>
        <td><%= link_to 'Editar', edit_docs_patient_path(patient) %></td>
        <td><%= link_to 'Eliminar', docs_patient_path(patient), method: :delete, data: { confirm: '¿Estás seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @patients, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>