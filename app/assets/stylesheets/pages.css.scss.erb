  font-weight: bold;
}

#features .content {
  text-align: center;
  padding: 30px 10px;
  margin: 10px 0;
}

#features .content h2{
  text-align: center;
  margin-bottom: 25px;
  color: #3E4C54;
  line-height: 1.4;
  font-family: "proxima-nova", sans-serif;
}

#features .content p {
  color: #3E4C54;
  line-height: 1.5;
  font-family: "proxima-nova", sans-serif;
  font-size: 14pt;
  font-weight: lighter
