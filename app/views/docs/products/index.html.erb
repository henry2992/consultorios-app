<p id="notice"><%= notice %></p>

<h1>Docs Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th>Price</th>
      <th>Expiration date</th>
      <th>Characteristics</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product&.name %></td>
        <td><%= product&.code %></td>
        <td><%= product&.price %></td>
        <td><%= product&.expiration_date %></td>
        <td><%= product&.characteristics %></td>
        <td><%= product&.status %></td>
        <td><%= link_to 'Show', docs_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_docs_product_path(product) %></td>
        <td><%= link_to 'Destroy', docs_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agrega un Nuevo Producto', new_docs_product_path %>
