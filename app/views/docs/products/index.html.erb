<h1 class="section-title">Productos</h1>

<div class='new-button' >
  <%= link_to 'Agrega un Nuevo Producto', new_docs_product_path %>
</div>

<div class="row row-fix">
  <table>
    <thead class="thead-general">
      <tr>
        <th>Codigo</th>
        <th>Cantidad</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Fecha de Expiracion</th>
        <th>Características</th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product&.code %></td>
          <td>20</td>
          <td><%= product&.name %></td>
          <td><%= product&.price %></td>
          <td><%= product&.expiration_date %></td>
          <td><%= product&.characteristics %></td>
          <td>Válido</td>
          <td></td>
          <td><%= link_to 'Editar', edit_docs_product_path(product) %></td>
          <td><%= link_to 'Eliminar', docs_product_path(product), method: :delete, data: { confirm: 'Are you sure?'} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
