<%= semantic_form_for ([:docs, @balance_sheet]) do |f| %>
  <div class="general-form">
    <%= f.inputs do %>
      <%= f.input :title, label: false, placeholder: 'Título' %>
      <%= f.input :description, label: false, placeholder: 'Descripción', :rows => 5 %>
      <%= f.input :start_at, label: "Fecha de Inicio", start_year: 2000, placeholder: "Fecha de Inicio" %>
      <%= f.input :ends_at, label: "Fecha de Término", start_year: 2000, placeholder: "Fecha de Nacimiento" %>
    <% end %>
  </div>
  <%= f.actions do %>
    <%= f.action :submit, :label => " Guardar ", :button_html => { :class => "submit-button" } %>
  <% end %>
<% end %>
