<table class="table">
  <thead> 
    <tr> 
      <th><%= sortable "#", ["id"] %></th>
      <th><%= sortable "Fecha", ["transaction_date"] %></th>
      <th><%= sortable "Título", ["title"] %></th> 
      <th><%= sortable "Doctor", ["doctor_id"] %></th> 
      <th><%= sortable "Paciente", ["patient_id"] %></th> 
      <th><%= sortable "Ingreso", ["incoming"] %></th>
      <th><%= sortable "Egreso", ["outgoing"] %></th>
      <th colspan="3" class="no-print">&nbsp;</th>
    </tr> 
  </thead> 
  <tbody class="smaller">
    <% @balance_sheet_entries.each do |entry| %>
    <tr> 
      <td><%= entry.id %></td> 
      <td><%= entry.transaction_date %></td> 
      <td><%= entry.title.truncate(25) %></td> 
      <td><%= entry.doctor.full_name %></td> 
      <td><%= entry.patient.full_name %></td> 
      <td><%= entry.amount if entry.transaction_type.incoming? %></td> 
      <td><%= entry.amount if entry.transaction_type.outgoing? %></td> 
      <td colspan="3" class="no-print">
        <%= link_to '<i class="icon-eye icons"></i>'.html_safe, docs_balance_sheet_balance_sheet_entry_path(@balance_sheet, entry), title: "Ver", alt: "Ver" %>&nbsp;&nbsp;
        <%= link_to '<i class="icon-pencil icons"></i>'.html_safe, edit_docs_balance_sheet_balance_sheet_entry_path(@balance_sheet, entry), title: "Editar", alt: "Editar" %>&nbsp;&nbsp;
        <%= link_to '<i class="icon-trash icons"></i>'.html_safe, docs_balance_sheet_balance_sheet_entry_path(@balance_sheet, entry), method: :delete, data: { confirm: '¿Estás seguro de eliminar?' } %>
      </td> 
    </tr> 
    <% end %>
    <% if @balance_sheet_entries.blank? %>
      <tr>
        <td colspan="10">No hay entradas para este periodo, <%= link_to 'agregue una nueva', new_docs_balance_sheet_balance_sheet_entry_path(@balance_sheet) %></td>
      </tr>
    <% end %>
  </tbody> 
</table>
<%= will_paginate @balance_sheet_entries, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer %>