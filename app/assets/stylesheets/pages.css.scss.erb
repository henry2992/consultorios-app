.circleIcon{
  display: block;
  width: 5rem;
  height: 5rem;
  border-radius: 50%;
  color: white;
  background-color: #24B7DB;
  text-align: center;
  font-size: 6em;
  font-family: serif;
  margin: 15px auto;
  line-height: 1.25
}

.reviews-img{
  text-align: center;
}

.reviews-img img {
  width: 75px;
  margin-right: 15px;
}


/*** Contact Form ***/

#contact-section{
  padding: 50px 0;
}

#contact-section h2, #contact-section p {
  text-align: center;
}

.contact-form {
