<!DOCTYPE html>
<html>
  <head>
    <title>Consultorios</title>
    <%= csrf_meta_tags %>
    
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
    <%= stylesheet_link_tag 'doctors', media: 'all' %>
    <%= stylesheet_link_tag 'agenda', media: 'all' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>
  <body>
    <div class="app">
      <%= render 'layouts/header' %>
      <div class="app-body">
        <%= render 'layouts/sidebar' %>
        <!-- Main content -->
        <main class="main">
          <div class="container-fluid main-wrapper">
            <div class="main-content">
              <% if notice %>
              <div class="alert alert-success" role="alert"><button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button><%= notice %></div>
              <% end %>
              <% if !@appointment.blank? %>
              <% if @appointment.errors.any? 
                  pluralize(@appointment.errors.count, "error") + " No se pudo programar:" %>
                <div class="alert alert-danger alert-dismissible" role="alert">
                  <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                  <ul>
                    <% @appointment.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              <% end %>
              <% end %>
              <%= yield %>
            </div> 
          </div>
        </main>
      </div>
    </div>

    <%= javascript_include_tag 'agenda' %>

  </body>
</html>