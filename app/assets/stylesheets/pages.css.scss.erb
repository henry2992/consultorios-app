#features .content img {
  width: 75px;
  height: 75px;
  background-color: #24B7DB;
  border-radius: 50%
}



/**** Reviews ****/

#reviews {
  padding: 50px 0;
  background-color: #F4F6F6;
}

.people-reviews{
  margin-top: 40px;
}

.reviews-content{
  padding: 35px 0;
}

#reviews h3 {
  text-transform: uppercase;
  font-weight: 300;
  font-size: 1.2em;
  color: #24B7DB;
  margin-top: 10px;
}

#review p {
  color: #3E4C54;
  line-height: 1.4;
  font-family: "proxima-nova", sans-serif;
